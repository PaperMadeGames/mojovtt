<form>
  {{#if isCharacter}}

    <div class="hp-field form-group">
      <input type="number" name="hp.max" value="{{source.max}}"
        placeholder="{{hp.max}}" title="{{localize 'MOJO.HitPointsOverride'}}">
    </div>

    <div class="form-group">
      <label>{{localize "MOJO.HitPointsBonusLevel"}}</label>
      <input type="text" name="hp.bonuses.level" value="{{hp.bonuses.level}}">
    </div>
    <div class="form-group">
      <label>{{localize "MOJO.HitPointsBonusOverall"}}</label>
      <input type="text" name="hp.bonuses.overall" value="{{hp.bonuses.overall}}">
    </div>

  {{else}}

    <div class="hp-field form-group">
      <input type="number" name="hp.max" value="{{hp.max}}" title="{{localize 'MOJO.HitPointsMax'}}">
    </div>

    <div class="form-group">
      <label>{{localize "MOJO.HPFormula"}}</label>
      <div class="form-fields">
        <input type="text" name="hp.formula" value="{{hp.formula}}">
        <button class="roll-hit-points"><i class="fas fa-dice"></i> {{localize "MOJO.Roll"}}</button>
      </div>
    </div>

  {{/if}}

  <button type="submit">
    <i class="far fa-save"></i> {{localize "Save"}}
  </button>
</form>
