<form autocomplete="off">
    <p class="notes">{{localize "MOJO.InitiativeConfigHint"}}</p>

    <div class="form-group">
        <label>{{localize "MOJO.AbilityModifier"}}</label>
        <div class="form-fields">
            <select name="system.attributes.init.ability">
                {{selectOptions abilities selected=ability blank=""}}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "MOJO.InitiativeBonus"}}</label>
        <div class="form-fields">
            <input name="system.attributes.init.bonus" type="text" value="{{bonus}}"/>
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "MOJO.FlagsAlert"}}</label>
        <input type="checkbox" name="flags.mojo.initiativeAlert" {{checked initiativeAlert}}/>
    </div>

    <div class="form-group">
        <label>{{localize "MOJO.FlagsInitiativeAdv"}}</label>
        <input type="checkbox" name="flags.mojo.initiativeAdv" {{checked initiativeAdv}}/>
    </div>

    <button type="submit"><i class="far fa-save"></i> {{ localize "Submit"}}</button>
</form>
